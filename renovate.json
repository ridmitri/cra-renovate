{
  "extends": ["config:base"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "groupName": "main"
    },
    {
      "matchPackagePatterns": ["*"],
      "excludePackagePatterns": [
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "groupName": "common"
    }
  ],
  "timezone": "Europe/Berlin"
}
