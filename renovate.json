{
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "main",
      "matchPackagePatterns": [
        "typescript",
        "cypress",
        "react-scripts",
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "labels": ["patch", "dependencies"],
      "automerge": true
    },
    {
      "groupName": "common",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "excludePackagePatterns": [
        "typescript",
        "cypress",
        "react-scripts",
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "separateMajorMinor": false,
      "automerge": true,
      "labels": ["patch", "dependencies"]
    }
  ],
  "schedule": ["every weekday"],
  "timezone": "Europe/Berlin"
}
