{
  "extends": ["config:base"],
  "packageRules": [
    {
      "automerge": true,
      "labels": ["patch"]
    },
    {
      "matchPackagePatterns": [
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "groupName": "main"
    },
    {
      "matchPackagePatterns": ["*"],
      "excludePackagePatterns": [
        "react",
        "react-dom",
        "@types/react-dom",
        "@types/react"
      ],
      "groupName": "common"
    }
  ],
  "timezone": "Europe/Berlin"
}
